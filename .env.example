# ============================================================================
# Activity Platform - Environment Variables
# ============================================================================
#
# Instructions:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. NEVER commit .env to version control!
#
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================

# Backend API base URL
API_BASE_URL=http://localhost:8000

# WebSocket URL (for real-time features)
WEBSOCKET_URL=ws://localhost:8001

# ============================================================================
# Sentry Configuration (Crash Reporting)
# ============================================================================
# Get your DSN from: https://sentry.io/
# Leave empty to disable Sentry in development

SENTRY_DSN=

# ============================================================================
# Segment Configuration (Analytics)
# ============================================================================
# Get your Write Key from: https://segment.com/
# Leave empty to disable analytics in development

SEGMENT_WRITE_KEY=

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features for testing
ENABLE_OFFLINE_MODE=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# ============================================================================
# Optional: Third-party Integrations
# ============================================================================

# Google Maps API Key (for location features)
GOOGLE_MAPS_API_KEY=

# Push Notifications (Expo)
EXPO_PUSH_TOKEN=

# ============================================================================
# Development Settings
# ============================================================================

# Enable debug logging
DEBUG=false

# Mock data in development
USE_MOCK_DATA=false
