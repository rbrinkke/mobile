{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    // Path mappings for absolute imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@hooks/*": ["src/hooks/*"],
      "@stores/*": ["src/stores/*"],
      "@api/*": ["src/api/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@features/*": ["src/features/*"]
    }
  }
}
